Header add Access-Control-Allow-Origin "*"
Header add Access-Control-Allow-Methods "GET,PUT,PATCH,POST,DELETE"
Header add Access-Control-Allow-Headers "Content-Type, Authorization"

php_flag opcache.enable On

<Files .htaccess>
  order allow,deny
  deny from all
</Files>

RewriteEngine on
RewriteBase /

# Static Route
RewriteRule ^(.*)\.(jpg|png|ico)$ src/public/img/$0 [NC,END]
RewriteRule ^(.*)\.css$ src/public/style/$0 [NC,END]
RewriteRule ^(.*)\.js$ src/public/js/$0 [NC,END]
RewriteRule ^templates/(.+)\.html$ src/public/$0 [NC,END]

# PHP Router
RewriteRule ^(.*)$ src/handlers/router.php [NC,L,QSA]
